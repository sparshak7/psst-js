{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@psst/collector": ["packages/collector/src"],
      "@psst/api": ["packages/api/src"],
      "@psst/common": ["packages/common/src"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
